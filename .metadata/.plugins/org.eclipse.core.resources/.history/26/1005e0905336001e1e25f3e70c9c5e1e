package java_study.chapter08.sec05;

public class HankookTire2 extends Tire {

	public HankookTire2(String location, int maxRotation) {
		super(location, maxRotation);
	}

	@Override
	public boolean roll() {
		++accumulatedRotation;
		if (accumulatedRotation < maxRotation) {
			System.out.println(location + " HankookTire ¼ö¸í : " + (maxRotation - accumulatedRotation) + "È¸");
			return true;
		} else {
			System.out.println("*** " + location + " HankookTire ÆãÅ© ***");
			return false;
		}
	}

}
