package java_study.chapter11.sec06;

import java.util.Arrays;

public class SortExample {

	public static void main(String[] args) {
		int[] scores = { 99, 97, 98, 37, 88 };

		Arrays.sort(scores);
		int index = Arrays.binarySearch(scores, 99);
		System.out.println("Ã£Àº ÀÎµ¦½º: " + index);
		System.out.println(Arrays.toString(scores));

		String[] names = { "È«±æµ¿", "¹Úµ¿¼ö", "±è¹Î¼ö" };

		Arrays.sort(names);
		index = Arrays.binarySearch(names, "È«µ¿");
		System.out.println("Ã£Àº ÀÎµ¦½º: " + index);
		System.out.println(Arrays.toString(names));

		Member[] members = { new Member("È«±æµ¿", 10), new Member("¹Úµ¿¼ö", 5), new Member("±è¹Î¼ö", 3) };

		Arrays.sort(members);
		index = Arrays.binarySearch(members, new Member("È«±æµ¿2", 10));
		System.out.println("Ã£Àº ÀÎµ¦½º: " + index);
		System.out.println(Arrays.toString(members));
	}

}
