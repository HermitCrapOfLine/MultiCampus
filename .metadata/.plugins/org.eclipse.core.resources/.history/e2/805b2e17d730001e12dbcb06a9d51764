package java_study.chapter05;

public class ArrayEx4 {

	public static void main(String[] args) {
		// 친구 이름
		String[] names = { " ", "이름", "나이", "발크기", "성별" };

		for (int i = 0; i < names.length; i++) {
			System.out.print(names[i] + " ");
		}

		System.out.println();

		// 우리 가족 5명의 나이를 넣어보세요. 전체 출력
		String[] ages = { "1", "홍길동", "50", "134", "남" };
		for (int i = 0; i < ages.length; i++) {
			System.out.print(ages[i] + " ");
		}

		System.out.println();
		// 친구의 발 사이즈를 넣어보세요. 전체 출력
		String[] shoes = { "2", "김길동", "40", "231", "여" };
		for (int i = 0; i < shoes.length; i++) {
			System.out.print(shoes[i] + " ");
		}

		System.out.println();
		// 친구들의 성별을 넣어보세요. 전체 출력
		String[] gender = { "3", "박길동", "30", "245", "남" };
		for (int i = 0; i < gender.length; i++) {
			System.out.print(gender[i] + " ");
		}

		System.out.println();
		// 친구들의 성별을 넣어보세요. 전체 출력
		String[] gender2 = { "4", "송길동", "20", "260", "남" };
		for (int i = 0; i < gender.length; i++) {
			System.out.print(gender[i] + " ");
		}

		System.out.println();
		// 친구들의 성별을 넣어보세요. 전체 출력
		String[] gender3 = { "5", "정길동", "10", "255", "여" };
		for (int i = 0; i < gender.length; i++) {
			System.out.print(gender[i] + " ");
		}

	}
}
