package java_study.chapter04;

import java.util.Random;
import java.util.Scanner;

public class Game {

	public static void main(String[] args) {

		final int SCISSORS = 0;
		final int ROCK = 1;
		final int PAPER = 2;

//		final int ROCK = 0;
//		final int SCISSORS = 1;
//		final int PAPER = 2;

		Random r = new Random();
		Scanner sc = new Scanner(System.in);

		int meWin = 0; // 나 승
		int comWin = 0; // 컴 승
		int draw = 0; // 비김

		while (true) {

			int computer = r.nextInt(3); // 3은 미포함 0, 1, 2 중에서 랜덤하게 정함
			System.out.println("0: 가위, 1: 바위, 2:보, -1: 종료 >> ");
			int me = sc.nextInt();

			// 종료 조건 확인 후 진행
			if (me == -1) { // 종료 조건
				System.out.println("게임을 끝냅니다.");
				break;
			}

			System.out.printf("컴퓨터 : %d, 나 : %d == > ", computer, me);

			if (me == computer) { // 비긴거
				draw++;
				System.out.println("비겼습니다.");

			} else if ((me == SCISSORS && computer == PAPER) || (me == ROCK && computer == SCISSORS)
					|| (me == PAPER && computer == ROCK)) {
				meWin++;
				System.out.println("내가 이겼습니다.");

			} else {
				comWin++;
				System.out.println("컴퓨터가 이겼습니다.");
			}
		}
	}

}
