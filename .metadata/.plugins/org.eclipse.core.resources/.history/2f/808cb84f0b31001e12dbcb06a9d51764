package java_study.chapter05;

public class ArrayEx9 {

	static int findMaxValue(int[] data) {
		int max = data[0];
		for (int i = 0; i < data.length; i++) {
			if (max < data[i]) {
				max = data[i];
			}
		}
		return max;
	}

	static int findMinValue(int[] data) {
		int min = data[0];
		for (int i = 0; i < data.length; i++) {
			if (min > data[i]) {
				min = data[i];
			}
		}
		return min;
	}

	public static void main(String[] args) {
		int[] save = new int[5];
		ArrayEx7.getNumbers("숫자 입력>> ", jumsu);

		int max = findMaxValue(save);

		int min = findMinValue(save);

	}

}
