package java_study.chapter05;

public class ArrayEx9 {

	static int findMaxValue(int[] data) {
		int max = data[0];
		for (int i = 0; i < data.length; i++) {
			if (max < data[i]) {
				max = data[i];
			}
		}
		return max;
	}

	static int findMinValue(int[] data) {

		int min = data[0];
		for (int i = 0; i < data.length; i++) {
			if (min > data[i]) {
				min = data[i];
			}
		}
	}

	public static void main(String[] args) {
		int[] jumsu = new int[5];
		ArrayEx7.getNumbers("숫자 입력>> ", jumsu);

		
		System.out.println("최고 점수는 : " + max);

		int min = jumsu[0];
		for (int i = 0; i < jumsu.length; i++) {
			if (min > jumsu[i]) {
				min = jumsu[i];
			}
		}
		System.out.println("최저 점수는 : " + min);

	}

}
